.scroll{
    position: absolute;
    bottom: 5%;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
}

.scroll__text{
  font-size: 18px;
  font-weight: 600;
  cursor:pointer;
  margin-right:10px;
}

.scroll__icon{
  width:25px;
  height:25px;
  fill:#fff;
      

 &:hover{
  fill:#f29400;
  transition: .6s;
    }
}